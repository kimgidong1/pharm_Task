<Window x:Class="wpf_0305.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="추가" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="이름:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="80,0,0,0"/>

        <TextBlock Text="성별:" Grid.Row="1"/>
        <ComboBox x:Name="GenderComboBox" Grid.Row="1" Margin="80,0,0,0">
            <ComboBoxItem Content="남"/>
            <ComboBoxItem Content="여"/>
        </ComboBox>

        <TextBlock Text="생년월일:" Grid.Row="2"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="2" Margin="80,0,0,0"/>

        <Button Content="추가" Grid.Row="4" HorizontalAlignment="Center" Click="Add_Click"/>
    </Grid>
</Window>
